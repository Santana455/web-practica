<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/navigation') %>
  
  <h1>HOLA MUNDO</h1>
  <h2>Primer Proyecto de práctica</h2>
  <img src="/img/programando.jpeg">

  <!-- Contenedor para mostrar la información -->
  <div id="mostrarweb"></div>

  <script>
    async function getweb() {
      try {
        const response = await fetch('http://localhost:3000/api/get-web', {
          method: 'GET',
          headers: { 'Content-Type': 'application/json' }
        });
        
        if (response.ok) {
          const web = await response.json();
          console.log("Las webs encontradas fueron:");
          console.log(web);
          // Llamamos a la función para mostrar los datos en la página
          mostrarweb(web);
        } else {
          console.error("Error en la respuesta:", response.status);
        }
      } catch (error) {
        console.error("Error en la petición:", error);
      }
    }

    function mostrarweb(webData) {
      const container = document.getElementById('mostrarweb');
      container.innerHTML = ''; // Limpiamos el contenedor

      webData.forEach(item => {
        // Creamos un contenedor para cada 'web'
        const webDiv = document.createElement('div');
        webDiv.classList.add('web');

        // Creamos y configuramos el título
        const titulo = document.createElement('h1');
        titulo.textContent = item.titulo;

        // Creamos y configuramos la imagen
        const imagen = document.createElement('img'); // Usamos 'img', no 'src'
        imagen.src = item.url;
        imagen.alt = item.titulo;

        // Agregamos los elementos al contenedor de la web
        webDiv.appendChild(titulo);
        webDiv.appendChild(imagen);

        // Agregamos el contenedor de la web al contenedor principal
        container.appendChild(webDiv);
      });
    }

    window.addEventListener('DOMContentLoaded', getweb);
  </script>

  <%- include('partials/footer') %>
</body>
</html>
